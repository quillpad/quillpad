<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- General -->
        <item name="colorBackground">#121212</item>
        <item name="colorShadow">#24000000</item>
        <item name="colorOutline">#1EFFFFFF</item>
        <item name="colorTextOverlay">#99000000</item>

        <!-- App bars -->
        <item name="colorBottomAppBarBackground">#202020</item>


        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <!-- Navigation -->
        <item name="colorDrawerBackground">#202020</item>
        <item name="colorDrawerItemRipple">#59FFFFFF</item>
        <item name="colorDrawerItemIconSelected">@color/state_drawer_selected_item_icon_color</item>
        <item name="colorDrawerItemTextSelected">@color/state_drawer_selected_item_color</item>
        <item name="drawableDrawerItemBackground">@drawable/state_drawer_item_background</item>

        <item name="colorNoteText">#FFFFFF</item>
        <item name="colorNoteIndicator">#B3FFFFFF</item>
        <item name="colorAttachmentIndicator">#89000000</item>
        <item name="colorTaskDone">#80FFFFFF</item>
        <item name="colorMarkdownTask">#80FFFFFF</item>
        <item name="colorMediaControlsBackground">#CC000000</item>

        <item name="colorTaskSwipe">#CCF44336</item>
        <item name="colorHighlightMask">#1FFFFFFF</item>

        <item name="colorNoteDefault">#1C1C1C</item>
        <item name="colorNoteRed">#761725</item>
        <item name="colorNoteOrange">#693A1C</item>
        <item name="colorNoteYellow">#7C5603</item>
        <item name="colorNoteGreen">#264D3B</item>
        <item name="colorNoteTeal">#0C635D</item>
        <item name="colorNoteCyan">#2B7489</item>
        <item name="colorNoteBlue">#274255</item>
        <item name="colorNotePurple">#482E5B</item>
        <item name="colorNotePink">#6D394F</item>
        <item name="colorNoteBrown">#4B443A</item>
